@if (@Tipo == "pesquisa")
{
    <input type="search" class="@estiloPadrao" placeholder="@Placeholder" value="@Valor"  />
    <Botao Tipo = "filled-rounded" >Pesquisar</Botao>
}
else if (@Tipo == "texto")
{
    <input type="text" class="@estiloPadrao" placeholder="@Placeholder" />
}
else if (@Tipo == "email")
{
    <input type="email" class="@estiloPadrao" placeholder="@Placeholder" />
}
else if (@Tipo == "senha")
{
    <input type="password" class="@estiloPadrao" placeholder="@Placeholder" />
}
else if (@Tipo == "numero")
{
    <input type="number" class="@estiloPadrao" placeholder="@Placeholder" />
}


@code {
    [Parameter] public string? Tipo { get; set; }
    [Parameter] public string? Placeholder { get; set; }
    public string? Valor {get; set;}

    private string estiloPadrao {get;} = " p-1 w-full rounded-sm border-2 border-Cor-Primaria focus:border-Cor-Detalhes01 focus:outline-none ";
}
